<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/sfondo_local_booking"
    tools:context=".activities.ChangeNameActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/button_begin"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/changeNameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Name"
                android:textAlignment="center"
                android:textColor="@color/booking_color"
                android:textSize="36sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/newName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_begin"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="New First Name"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"></EditText>

            <EditText
                android:id="@+id/newSurname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_begin"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="New Surname"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"></EditText>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirm_change_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_confirm"
                android:text="Confirm"
                android:textColor="@color/white">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>