<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/teal_200">

        <TextView
            android:id="@+id/reviewScore"
            android:layout_width="44dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="16dp"
            android:text="0.0/5.0"
            android:textAlignment="center"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/establishmentName2"
            android:layout_width="222dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Nome Establishment"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/establishmentOwner"
            android:layout_width="222dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:text="Proprietario"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/establishmentAddress"
            android:layout_width="222dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="104dp"
            android:text="Indirizzo"
            android:textSize="16sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/reserveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="105dp"
            android:clickable="true"
            android:contentDescription="Prenota"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@android:color/holo_green_light" />

        <ImageView
            android:id="@+id/starImage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="351dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="10dp"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/price"
            android:layout_width="204dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="5dp"
            android:text="Costo"
            android:textSize="12sp"
            android:textStyle="italic" />

    </RelativeLayout>

</RelativeLayout>